[
  {
    "label": "Debug current C/C++ file (gcc -> CodeLLDB)",
    "build": {
      "command": "sh",
      "args": [
        "-c",
        "mkdir -p \"$ZED_WORKTREE_ROOT/build\" && gcc \"$ZED_FILE\" -g -o \"$ZED_WORKTREE_ROOT/build/$ZED_STEM\""
      ],
      "cwd": "$ZED_WORKTREE_ROOT",
      "show_summary": true,
      "show_command": true
    },
    "program": "$ZED_WORKTREE_ROOT/build/$ZED_STEM",
    "request": "launch",
    "adapter": "CodeLLDB"
  }
]
